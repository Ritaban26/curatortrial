{
	"version": 3,
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"title": "Pill",
	"slug": "post-terms",
	"blockTypes": [ "core/post-terms" ],
	"styles": {
		"css": "& { display: block; } & span:not([class], [data-rich-text-placeholder]) { display: inline-block; background-color: var(--wp--preset--color--primary); color: var(--wp--preset--color--base); padding: 8px 12px; border-radius: 100px;} & span:not([class], [data-rich-text-placeholder]):hover{ background-color: var(--wp--preset--color--primary-900); color: var(--wp--preset--color--base); text-decoration: none !important; }",
		"elements": {
			"link": {
				"css": "& { display: inline-block; }",
				"border": {
					"radius": "100px",
					"width": "0"
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--base)"
				},
				"spacing": {
					"margin": {
						"top": "2px",
						"bottom": "2px"
					},
					"padding": {
						"top": "8px",
						"right": "12px",
						"bottom": "8px",
						"left": "12px"
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--minute)",
					"fontWeight": "normal",
					"fontStyle": "normal",
					"lineHeight": "var(--wp--custom--global--line-height--petite)",
					"textDecoration": "none"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--secondary)",
						"text": "var(--wp--preset--color--base)"
					},
					"typography": {
						"textDecoration": "none"
					}
				}
			}
		}
	}
}
